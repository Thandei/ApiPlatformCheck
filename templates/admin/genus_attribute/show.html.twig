{% extends 'admin/base.html.twig' %}

{% block title %}{{ "app.admin.crud.genus.details"|trans }}{% endblock %}
{% block bodyTitle %}{{ "app.admin.crud.genus.details"|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ "app.admin.crud.genus.details"|trans }}</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>{{ "app.admin.crud.id"|trans|caseupper }}</th>
                            <td>{{ genus_attribute.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ "app.admin.crud.name"|trans|caseupper }}</th>
                            <td>{{ genus_attribute.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ "app.admin.crud.unit"|trans|caseupper }}</th>
                            <td>{{ genus_attribute.unit }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-secondary" href="{{ path('app_admin_genus_attribute_index') }}">{{ "app.admin.crud.backtolist"|trans }}</a>
                    <a class="btn btn-primary" href="{{ path('app_admin_genus_attribute_edit', {'id': genus_attribute.id}) }}">{{ "app.admin.crud.edit"|trans }}</a>
                    {{ include('admin/genus_attribute/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
