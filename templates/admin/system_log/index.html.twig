{% extends 'admin/base.html.twig' %}

{% block title %}System Log Index {% endblock %}
{% block bodyTitle %}System Log Index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        System Logs
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive dt-responsive">
                        <table class="table table-bordered datatable">
                            <thead>
                            <tr>
                                <th class="text-center" >PRIORITY</th>
                                <th data-orderable="false">CONTENT</th>
                                <th data-orderable="false" class="text-center">CREATED AT</th>
                                <th data-orderable="false" class="text-center">ACTIONS</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for system_log in system_logs %}
                                <tr>
                                    <td class="text-center">
                                        {% if system_log.priority is same as("LOW") %}
                                            <span class="text-secondary">{{ system_log.priority }}</span>
                                        {% endif %}
                                        {% if system_log.priority is same as("NORMAL") %}
                                            {{ system_log.priority }}
                                        {% endif %}
                                        {% if system_log.priority is same as("HIGH") %}
                                            <span class="fw-semibold text-danger">{{ system_log.priority }}</span>
                                        {% endif %}
                                    </td>

                                    <td>
                                        {% if system_log.content|length > 50 %}
                                            {{ system_log.content|slice(0,50) }}<a href="{{ path('app_admin_system_log_show', {'id': system_log.id}) }}}}"> show more</a>
                                        {% else %}
                                            {{ system_log.content }}
                                        {% endif %}
                                    </td>
                                    <td class="text-center">{{ system_log.createdAt ? system_log.createdAt|date(shared.defaultDatetimeFormat) : '' }}</td>
                                    <td class="text-center">
                                        <ul class="list-inline me-auto mb-0">
                                            <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" aria-label="View" data-bs-original-title="View">
                                                <a href="{{ path('app_admin_system_log_show', {'id': system_log.id}) }}" class="avtar avtar-xs btn-link-secondary btn-pc-default">
                                                    <i class="ti ti-eye f-18"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" aria-label="Edit" data-bs-original-title="Edit">
                                                <a href="{{ path('app_admin_system_log_edit', {'id': system_log.id}) }}" class="avtar avtar-xs btn-link-success btn-pc-default">
                                                    <i class="ti ti-edit-circle f-18"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a class="btn btn-primary" href="{{ path('app_admin_system_log_new') }}">Create New</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}










