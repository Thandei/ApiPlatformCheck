{% extends 'admin/base.html.twig' %}

{% block title %}Locale Details{% endblock %}
{% block bodyTitle %}Locale Details{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Locale Details</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive dt-responsive">
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ locale.id }}</td>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ locale.code }}</td>
                            </tr>
                            <tr>
                                <th>Flag</th>
                                <td>{{ locale.flag }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ locale.name }}</td>
                            </tr>
                            <tr>
                                <th>Is System's Default?</th>
                                <td>{{ locale.systemsdefault ? '<span class="badge bg-success">Yes</span>' : '--' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-secondary" href="{{ path('app_admin_locale_index') }}">back to list</a>
                    <a class="btn btn-primary" href="{{ path('app_admin_locale_edit', {'id': locale.id}) }}">edit</a>
                    {{ include('admin/locale/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

