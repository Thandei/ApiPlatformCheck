{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'app.admin.crud.app.policy'|trans }}  {{ 'app.admin.crud.index'|trans }}{%endblock %}
{% block bodyTitle %}{{ 'app.admin.crud.app.policy'|trans }}  {{ 'app.admin.crud.index'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        {{ 'app.admin.crud.app.policy'|trans }}  {{ 'app.admin.crud.index'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{{ "app.admin.crud.keyname"|trans|caseupper }}</th>
                            <th data-orderable="false">{{ "app.admin.crud.name"|trans|caseupper }}</th>
                            <th data-orderable="false">{{ "app.admin.crud.content"|trans|caseupper }}</th>
                            <th data-orderable="false" class="text-center">{{ "app.admin.crud.actions"|trans|caseupper }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for app_policy in app_policies %}
                            <tr>
                                <td>{{ app_policy.keyname }}</td>
                                <td>{{ app_policy.name }}</td>
                                <td>{{ app_policy.content }}</td>
                                <td class="text-center">
                                    <ul class="list-inline me-auto mb-0">
                                        <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" aria-label="View" data-bs-original-title="View">
                                            <a href="{{ path('app_admin_policy_show', {'id': app_policy.id}) }}" class="avtar avtar-xs btn-link-secondary btn-pc-default">
                                                <i class="ti ti-eye f-18"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" aria-label="Edit" data-bs-original-title="Edit">
                                            <a href="{{ path('app_admin_policy_edit', {'id': app_policy.id}) }}" class="avtar avtar-xs btn-link-success btn-pc-default">
                                                <i class="ti ti-edit-circle f-18"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">{{ "app.admin.crud.norecords"|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a class="btn btn-primary" href="{{ path('app_admin_policy_new') }}">{{ "app.admin.crud.createnew"|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
