{% extends 'admin/base.html.twig' %}

{% block title %}{{ "app.admin.crud.landingslide"|trans }} {{ "app.admin.crud.details"|trans }}{% endblock %}
{% block bodyTitle %}{{ "app.admin.crud.landingslide"|trans }} {{ "app.admin.crud.details"|trans }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        {{ "app.admin.crud.landingslide"|trans }} {{ "app.admin.crud.details"|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered dataTable">
                        <tbody>
                        <tr>
                            <th>{{ "app.admin.crud.id"|trans|caseupper }}</th>
                            <td>{{ landing_slide.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ "app.admin.crud.textcontent"|trans|caseupper }}</th>
                            <td>{{ landing_slide.textcontent }}</td>
                        </tr>
                        <tr>
                            <th>{{ "app.admin.crud.tags"|trans|caseupper }}</th>
                            <td>{{ landing_slide.tags }}</td>
                        </tr>
                        <tr>
                            <th>{{ "app.admin.crud.image"|trans|caseupper }}</th>
                            <td>{{ landing_slide.image }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-secondary" href="{{ path('app_admin_landing_slide_index') }}">{{ "app.admin.crud.backtolist"|trans }}</a>
                    <a class="btn btn-primary" href="{{ path('app_admin_landing_slide_edit', {'id': landing_slide.id}) }}">{{ "app.admin.crud.edit"|trans }}</a>
                    {{ include('admin/landing_slide/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

